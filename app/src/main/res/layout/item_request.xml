<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:tools="http://schemas.android.com/tools" xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/requestLayout"
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    <View
            android:id="@+id/lineSupView"
            android:layout_width="fill_parent"
            android:layout_height="1dp"
            android:background="@android:color/black"
            tools:ignore="MissingConstraints"/>

    <TextView
            android:id="@+id/estadoTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ESTADO"
            tools:ignore="MissingConstraints"
            app:layout_constraintTop_toBottomOf="@id/lineSupView"
            android:paddingStart="50px"
            android:paddingTop="25px"/>

    <TextView
            android:id="@+id/dateTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="FECHA"
            tools:ignore="MissingConstraints"
            app:layout_constraintEnd_toEndOf="parent"
            android:paddingEnd="50px"
            android:paddingTop="25px"/>

    <TextView
            android:id="@+id/carTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="AUTO"
            tools:ignore="MissingConstraints"
            app:layout_constraintTop_toBottomOf="@id/estadoTextView"
            android:paddingStart="50px"
            android:textSize="20dp"
            android:textStyle="bold"
            android:paddingTop="10dp"/>

    <TextView
            android:id="@+id/customerTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="CLIENTE"
            tools:ignore="MissingConstraints"
            app:layout_constraintTop_toBottomOf="@id/carTextView"
            android:paddingStart="50px"
            android:paddingTop="10dp"
            android:paddingBottom="25px"/>

    <View
            android:layout_width="fill_parent"
            android:layout_height="1dp"
            android:background="@android:color/black"
            app:layout_constraintTop_toBottomOf="@id/customerTextView"
            tools:ignore="MissingConstraints"/>



</androidx.constraintlayout.widget.ConstraintLayout>