<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".activities.RequestStatusAcceptActivity">

    <include
            android:id="@+id/infoReservationInclude"
            layout="@layout/item_data_request"/>

    <TextView
            android:id="@+id/messageProviderTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:ignore="MissingConstraints"
            android:paddingTop="20dp"
            android:text="DETALLE RESPUESTA"
            android:paddingStart="10dp"
            app:layout_constraintTop_toBottomOf="@id/infoReservationInclude"/>

    <Button
            android:id="@+id/sendTestButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:ignore="MissingConstraints"
            app:layout_constraintTop_toBottomOf="@id/messageProviderTextView"
            android:layout_marginEnd="60dp"
            android:layout_marginStart="60dp"
            android:text="ENVIAR ENCUESTA"
            android:layout_marginTop="40px"
            app:layout_constraintEnd_toEndOf="parent"
            android:background="@color/colorPrimary"/>

</androidx.constraintlayout.widget.ConstraintLayout>