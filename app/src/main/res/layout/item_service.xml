<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/serviceLayout"
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent" xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto">
    <View
            android:id="@+id/lineSupView"
            android:layout_width="fill_parent"
            android:layout_height="1dp"
            android:background="@android:color/black"
            tools:ignore="MissingConstraints"/>
    <ImageView
            android:id="@+id/pictureImageView"
            android:layout_width="110dp"
            android:layout_height="105dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:src="@drawable/car"/>
    <TextView
            android:id="@+id/categoryTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="CATEGORIA"
            tools:ignore="MissingConstraints"
            app:layout_constraintStart_toEndOf="@id/pictureImageView"
            android:paddingTop="25px"
        android:paddingStart="10dp"/>

    <TextView
            android:id="@+id/nameServiceTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="NOMBRE"
            tools:ignore="MissingConstraints"
            app:layout_constraintTop_toBottomOf="@id/categoryTextView"
            app:layout_constraintStart_toEndOf="@id/pictureImageView"
            android:paddingEnd="50px"
            android:textSize="20dp"
            android:textStyle="bold"
            android:paddingTop="10dp"
            android:paddingStart="10dp"/>

    <TextView
            android:id="@+id/costTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="COST"
            tools:ignore="MissingConstraints"
            app:layout_constraintTop_toBottomOf="@id/nameServiceTextView"
            app:layout_constraintStart_toEndOf="@id/pictureImageView"
            android:paddingTop="10dp"
            android:paddingBottom="25px"
            android:paddingStart="10dp"/>

    <View
            android:layout_width="fill_parent"
            android:layout_height="1dp"
            android:background="@android:color/black"
            app:layout_constraintTop_toBottomOf="@id/costTextView"
            app:layout_constraintEnd_toEndOf="parent"
            tools:ignore="MissingConstraints"/>
</androidx.constraintlayout.widget.ConstraintLayout>