<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".activities.RequestStatusActiveActivity">


    <include
            android:id="@+id/infoReservationInclude"
            layout="@layout/item_data_request"/>
    <EditText
            android:id="@+id/messageEditText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="MOTIVO"
            tools:ignore="MissingConstraints"
            app:layout_constraintTop_toBottomOf="@id/infoReservationInclude"
            android:layout_marginEnd="70px"
            android:layout_marginStart="70px"
            android:paddingTop="90px"/>
    <Button
            android:id="@+id/sendAcceptButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:ignore="MissingConstraints"
            app:layout_constraintTop_toBottomOf="@id/messageEditText"
            android:layout_marginStart="100px"
            app:layout_constraintStart_toStartOf="parent"
            android:text="ACEPTAR"

            android:layout_marginTop="40px"
            android:layout_marginEnd="220dp"
            android:background="@color/colorPrimary"/>
    <Button
            android:id="@+id/sendDenyButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:ignore="MissingConstraints"
            app:layout_constraintTop_toBottomOf="@id/messageEditText"
            android:layout_marginEnd="100px"
            android:text="RECHAZAR "
            android:layout_marginTop="40px"
            android:layout_marginStart="220dp"
            app:layout_constraintEnd_toEndOf="parent"
            android:background="@color/colorDivider"/>

</androidx.constraintlayout.widget.ConstraintLayout>